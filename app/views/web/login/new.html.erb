<%= form_with(model: @form, url: login_index_path, method: :post, local: true) do |form| %>
  <p>
    <%= form.label :email  %>
    <%= form.text_field :email %>
  </p>
  <p>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </p>
  <p>
    <%= form.submit "Login" %>
  </p>
<% end %>