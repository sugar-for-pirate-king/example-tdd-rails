<h4>User Registration</h4>

<%= form_with model: @user, url: users_path, method: :post, local: true do |form| %>
  <p>
    <%= form.label :full_name %>
    <%= form.text_field :full_name %>
  </p>
  <p>
    <%= form.label :email %>
    <%= form.text_field :email %>
  </p>
  <p>
    <%= form.label :password %>
    <%= form.text_field :password %>
  </p>
  <p>
    <%= form.submit "Submit" %>
  </p>
<% end %>